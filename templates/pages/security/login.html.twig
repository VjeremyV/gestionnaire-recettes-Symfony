{% extends 'base.html.twig' %}

{% block title %}Connectez-vous
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Connectez-vous</h1>

		{% if error %}
			<div class="alert alert-danger">
				{{error.messageKey|trans(error.messageData, 'security')}}
			</div>
		{% endif %}
		<form action="{{path('app_security')}}" method='POST' name="login">
			<div class="form-group">
				<label for="username" class="form-label mt-4">votre email</label>
				<input type="email" class="form-control" id="username" placeholder="Exemple@mail.fr" name="_username" value={{last_username}}>
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="*******" autocomplete="off">
			</div>
			<button class="btn btn-primary" type='submit'>Connexion</button>
		</form>
	</div>
{% endblock %}
